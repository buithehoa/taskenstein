<% content_for :title, "Tasks | Taskenstein" %>

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-10 mx-auto d-flex justify-content-end">
            <%= link_to 'New', new_task_path, class: 'btn btn-primary' %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Tasks</h4>

                    <%= turbo_frame_tag "tasks" do %>
                      <%= render @tasks %>
                    <% end %>
                </div>
            </div>
            <!-- Pagination -->
            <nav aria-label="Task list navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

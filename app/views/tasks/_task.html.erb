<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= task.completed %>
  </p>

  <p>
    <strong>Due at:</strong>
    <%= task.due_at %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= task.priority %>
  </p>

</div>

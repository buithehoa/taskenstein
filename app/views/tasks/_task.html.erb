<div id="<%= dom_id task %>" class="row mb-3 task">
    <div class="col-auto align-self-start">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="task1">
            <%= check_box_tag "task_#{task.id}_completed", task.id, task.completed, class: "form-check-input", data: { controller: "tasks--complete", action: "tasks--complete#toggle" } %>
        </div>
    </div>
    <div class="col">
        <div>
            <a href="<%= edit_task_path(task.id) %>" class="text-decoration-none text-reset" data-turbo-frame="_top">
              <strong><%= task.title %></strong><br>
            </a>
            <small class="text-muted"><%= task.description %></small>
        </div>
    </div>
    <div class="col-auto align-self-start priority">
        <span class="badge <%= priority_class(task) %> text-uppercase">
          <%= priority_label(task) %>
        </span>
    </div>
    <div class="col-auto align-self-start due_at">
      <% if task.due_at.present? %>
        <span class="badge bg-light text-secondary">
          <i class="fa-regular fa-clock me-2"></i>
          <%= task.due_at.to_fs(:due_date) %>
        </span>
      <% else %>
        &nbsp;
      <% end %>
    </div>
</div>
